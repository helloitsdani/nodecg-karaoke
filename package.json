{
  "name": "nodecg-karaoke",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "npm run build:dashboard && npm run build:graphics",
    "build:dashboard": "rsbuild build --config rsbuild.dashboard.config.mts",
    "build:graphics": "rsbuild build --config rsbuild.graphics.config.mts"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0"
  },
  "devDependencies": {
    "@ant-design/icons": "^6.0.0",
    "@biomejs/biome": "2.0.6",
    "@nodecg/react-hooks": "^1.0.3",
    "@rsbuild/core": "^1.4.2",
    "@rsbuild/plugin-react": "^1.3.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "antd": "^5.26.4",
    "lint-staged": "^16.1.2",
    "nodecg": "^2.6.1",
    "typescript": "^5.8.3"
  },
  "nodecg": {
    "compatibleRange": ">=2.0.0",
    "dashboardPanels": [
      {
        "name": "player",
        "title": "Karaoke Player",
        "width": 3,
        "file": "player.html",
        "headerColor": "#f55db6"
      }
    ],
    "graphics": [
      {
        "file": "karaoke-machine.html",
        "width": 1920,
        "height": 1080,
        "singleInstance": false
      }
    ],
    "assetCategories": [
      {
        "name": "lyrics",
        "title": "LRC Lyrics",
        "allowedTypes": [
          "lrc"
        ]
      },
      {
        "name": "songs",
        "title": "Karaoke Songs",
        "allowedTypes": [
          "mp3",
          "flac",
          "ogg"
        ]
      }
    ]
  }
}
